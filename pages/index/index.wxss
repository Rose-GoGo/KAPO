  width: 90rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}
.Rose-kinds .iconfont {
  font-size: 46rpx;
  display: block;
}
.Rose-circle {
  border-radius: 100%;
  color: #fff;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 auto 8rpx;
}
.Rose-music {
  position: absolute;
  right: 20rpx;
  top: 0;
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  z-index: 2;
}
.Rose-play {
  position: relative;
  line-height: 72rpx;
}
.Rose-rotate {
  animation: rotate 1s linear infinite;
}
.icon-CD {
  font-size: 48rpx;
  margin-top: 10rpx;
  color: #fefefe;
}
@keyframes rotate {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
    transform-origin: 0, 0;
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
    transform-origin: 0, 0;
  }
}
