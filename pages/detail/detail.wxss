/*最新*/

.Rose-comments {
  background: #fff;
  padding: 20rpx 0 0;
}

.Rose-lists {
  padding: 20rpx;
}

.Rose-resource {
  display: flex;
}

.Rose-image {
  flex: none;
  width: 70rpx;
  height: 70rpx;
  border-radius: 4rpx;
}

.Rose-user {
  flex: 1;
  padding: 0 0 20rpx;
  font-size: 24rpx;
  color: #a8a8a8;
  line-height: 1;
  border-bottom: 1rpx solid #f2f2f2;
}

.Rose-items {
  padding: 30rpx 0 0;
}

.Rose-items:last-child .Rose-user {
  border-bottom: none;
}

.Rose-form {
  margin: 0 0 0 20rpx;
}

.Rose-names {
  font-size: 28rpx;
  color: #666;
}

.Rose-times {
  padding: 16rpx 0;
  color: #999;
  font-size: 20rpx;
}

.Rose-comment-content {
  color: #666;
  font-size: 32rpx;
  line-height: 44rpx;
}

.Rose-back {
  margin: 20rpx 0 0 20rpx;
  color: #999;
  font-size: 28rpx;
  padding: 10rpx;
  line-height: 1.6;
  background: #f5f5f5;
}

.Rose-back-item {
  line-height: 1.4;
  word-break: break-all;
  padding: 5rpx 0;
}

.Rose-tt {
  color: #333;
}

.Rose-empty {
  padding: 60rpx 0 80rpx;
  text-align: center;
  font-size: 14px;
  color: #999;
}

.Rose-center {
  text-align: center;
}

.Rose-end {
  padding: 30rpx 0;
  text-align: center;
  line-height: 1;
  border-top: 1rpx solid #f2f2f2;
  color: #999;
}

.Rose-word {
  line-height: 1;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999;
}

.iconfont.icon-kafei {
  display: block;
  font-size: 90rpx;
  color: #eee;
  margin-bottom: 10rpx;
}

.Rose-link {
  margin: 20rpx 0 0;
  padding: 5rpx;
  background: #f5f5f5;
  color: #999;
}

.Rose-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 2rpx solid #d9d9d9;
  z-index: 5;
  background: #fff;
}

.Rose-flex {
  padding: 12rpx 20rpx;
  display: flex;
}

.Rose-none {
  width: 80rpx;
  flex: none;
  font-size: 18rpx;
  color: #999;
  line-height: 1;
}

.Rose-none .iconfont {
  font-size: 48rpx;
  /*color: #4bb777;*/
  display: block;
  color: #666;
  font-weight: 600;
}

.Rose-none .iconfont.icon-heart-fill {
  color: #4bb777;
}

.Rose-input {
  flex: 1;
  margin: 0 20rpx 0 0;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background: #eef0f4;
  border: 1rpx solid #f2f2f2;
  font-size: 26rpx;
  border-radius: 40rpx;
  color: #666;
}

/* components/photo/photo.wxss */

.Rose-photo {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.Rose-done {
  width: 80%;
  height: 80%;
  position: fixed;
  top: 50rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 10;
}

.Rose-btn {
  display: block;
  width: 40%;
  height: 100rpx;
  padding: 0;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 10%;
  background: #fff;
  color: #333;
  font-size: 32rpx;
  border: 1rpx solid #f2f2f2;
  z-index: 11;
}

.Rose-save {
  left: 50%;
  color: #1d8f59;
}

.Rose-close {
  left: 10%;
}

.Rose-canvas {
  width: 0;
  height: 0;
  overflow: hidden;
}
