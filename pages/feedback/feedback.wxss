/* pages/feedback/feedback.wxss */

/*改版评论*/
.Rose-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #d9d9d9;
  background: #fff;
  z-index: 5
}
.Rose-flex {
  padding: 14rpx 20rpx;
  display: flex;
}
.Rose-none .iconfont {
  font-size: 52rpx;
  color: #999;
  padding: 15rpx 0 0;
}
.Rose-none .iconfont.icon-hongbao1 {
  color: #4bb777;
}
.Rose-input {
  flex: 1;
  height: 76rpx;
  line-height: 76rpx;
  margin: 0 20rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border: 2rpx solid #d9d9d9;
  line-height: 1;
  font-size: 30rpx;
  border-radius: 4rpx;
}
button[disabled]:not([type]) {
  background: #d9d9d9;
  color: #fff;
  border-radius: 4rpx;
}
button::after {
  border: 1px solid #d9d9d9;
  border-radius: 4rpx;
}
.Rose-post {
  flex: none;
  height: 78rpx;
  background: #4bb777;
  line-height: 78rpx;
  color: #fff;
  font-size: 26rpx;
  border-radius: 4rpx;
  padding: 0 20rpx;
  text-align: center;
  box-shadow: none;
}



.Rose-comments {
  margin: 20rpx 0 0;
  background: #fff;
}
.Rose-lists {
  padding: 20rpx;
}
.Rose-resource {
  display: flex;
}
.Rose-image {
  flex: none;
  width: 70rpx;
  height: 70rpx;
  border-radius: 4rpx;
}
.Rose-image .iconfont{
  font-size: 60rpx;
  color: #999

}
.Rose-user {
  flex: 1;
  padding: 0 0 20rpx;
  font-size: 24rpx;
  color: #a8a8a8;
  line-height: 1;
  border-bottom: 1rpx solid #f2f2f2;
}
.Rose-items {
  padding: 30rpx 0 0;
}

.Rose-items:last-child .Rose-user{
  border-bottom: none
}
.Rose-form {
  margin: 0 0 0 20rpx;
}
.Rose-names {
  font-size: 28rpx;
  color: #666;
}
.Rose-times {
  padding: 16rpx 0;
  color: #999;
  font-size: 20rpx;
}
.Rose-edit {
  width: 20%;
  float: left;
}
.Rose-edit icon {
  font-size: 36rpx;
  margin: 0 10rpx;
  color: #999;
}
.Rose-comment-content {
  color: #666;
  font-size: 32rpx;
  line-height: 44rpx;
}
.Rose-back {
  margin: 20rpx 0 0 20rpx;
  color: #999;
  font-size: 28rpx;
  padding: 10rpx;
  line-height: 1.6;
  background: #f5f5f5;
}
.Rose-back-item {
  line-height: 1.4;
  word-break: break-all;
  padding: 5rpx 0;
}
.Rose-tt {
  color: #333;
}

.Rose-feeds {
  padding: 10px;
  border-bottom: 2rpx solid #f2f2f2;
  font-size: 32rpx;
  color: #666;
}
.Rose-empty {
  padding: 40rpx 0;
  text-align: center;
  font-size: 14px;
  color: #999;
}
.Rose-end {
  margin:-20rpx 0 0;
  padding: 30rpx 0;
  text-align: center;
  line-height: 1;
  border-top: 1rpx solid #f2f2f2
}
.Rose-word{
  line-height: 1;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999
}
.iconfont.icon-kafei {
  display: block;
  font-size: 90rpx;
  color: #eee;
  margin-bottom: 10rpx;
}
